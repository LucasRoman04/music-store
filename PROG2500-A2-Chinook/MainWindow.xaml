<Window x:Class="PROG2500_A2_Chinook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PROG2500_A2_Chinook"
        mc:Ignorable="d"
        Title="Chinook Music Store" Height="450" Width="700">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="23*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="379*"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.RowSpan="3" Grid.ColumnSpan="2" Background="#408BF0">
            <MenuItem Header="File" FontSize="15">
                <MenuItem Header="Exit" Click="ExitClicked">
                    <MenuItem.Icon>
                        <Image Source="Images/exit_icon.png" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Pages" FontSize="15">
                <MenuItem Header="Home" Click="NavigateToHome">
                    <MenuItem.Icon>
                        <Image Source="Images/home_icon.png" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="View Artists" Click="NavigateToArtists">
                    <MenuItem.Icon>
                        <Image Source="Images/artists_icon.png" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="View Albums" Click="NavigateToAlbums">
                    <MenuItem.Icon>
                        <Image Source="Images/albums_icon.png" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="View Tracks" Click="NavigateToTracks">
                    <MenuItem.Icon>
                        <Image Source="Images/tracks_icon.png" Width="16" Height="16"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>

        <!-- Title -->
        <TextBlock Text="Welcome to the Chinook Music Store!" TextAlignment="Center" FontSize="19" FontWeight="Bold" Margin="0,1,0,359" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="2" Background="#285FF1"/>

        <!-- Left Side Bar -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,20,0,0" Width="56" Grid.Row="1" Background="#285FF1" Grid.RowSpan="2">
            <Button Content="Home" Click="NavigateToHome" Margin="0,25,0,15" ToolTip="Home Page" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate>
                        <StackPanel>
                            <Image Source="Images/home_icon.png" Width="32" Height="32"/>
                        </StackPanel>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Content="Artists" Click="NavigateToArtists" Margin="0,0,0,15" ToolTip="View All Artists" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate>
                        <StackPanel>
                            <Image Source="Images/artists_icon.png" Width="32" Height="32"/>
                        </StackPanel>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Content="Albums" Click="NavigateToAlbums" Margin="0,0,0,15" ToolTip="View All Albums" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate>
                        <StackPanel>
                            <Image Source="Images/albums_icon.png" Width="32" Height="32"/>
                        </StackPanel>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Content="Tracks" Click="NavigateToTracks" Margin="0,0,0,15" ToolTip="View All Tracks" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate>
                        <StackPanel>
                            <Image Source="Images/tracks_icon.png" Width="32" Height="32"/>
                        </StackPanel>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>

        <!-- Content Area -->
        <Frame Name="MainFrame" NavigationUIVisibility="Hidden" Margin="0,31,0,0" Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" Background="#408BF0"/>

    </Grid>
</Window>
